{
  "info": {
    "_postman_id": "brands-api-test-unique-id",
    "name": "Brands API Tests - Data Driven",
    "description": "Test API brands: POST, GET, PUT với data-driven test, có thêm test case thất bại",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "POST Brand",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.expect(pm.response.code).to.eql(201);",
              "});",
              "",
              "pm.test('Response has id, name, slug', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData.name).to.eql(pm.variables.get('name'));",
              "    pm.expect(jsonData.slug).to.eql(pm.variables.get('slug'));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{name}}\",\n  \"slug\": \"{{slug}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/brands",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "brands"
          ]
        }
      }
    },
    {
