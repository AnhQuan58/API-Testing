              "});",
              "",
              "pm.test('Brand information matches request', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.eql(parseInt(pm.variables.get('id')));",
              "    pm.expect(jsonData.name).to.eql(pm.variables.get('name'));",
              "    pm.expect(jsonData.slug).to.eql(pm.variables.get('slug'));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
